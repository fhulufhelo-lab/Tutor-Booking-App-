<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#458E8888"
    tools:context=".forgot_password"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backicon"
            android:padding="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Selection"
            android:textColor="#000"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which account detail should we use to reset your password"
            android:textSize="18sp"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="50dp"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cellphone"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/phone_icon"
        android:text="via sms : "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/phone_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
       android:textColor="@color/black"
        android:layout_toRightOf="@id/phone_icon"
        android:layout_below="@id/phone_title"
        android:text="+27782681152"
        android:textSize="25sp" />




</RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:src="@drawable/email"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/email_icon"
                android:text="via email : "
                android:textSize="25sp" />

            <TextView
                android:id="@+id/email_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/email_icon"
                android:layout_below="@id/email_title"
                android:text="zusiphexelelo@gmail.com"
                android:textSize="20sp" />




        </RelativeLayout>



    </LinearLayout>

</ScrollView>